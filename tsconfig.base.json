{
	"compilerOptions": {
		"target": "es2017",
		"lib": [
			"es2017"
		],
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"removeComments": false,
		"importHelpers": false,
		"strict": false,
		"moduleResolution": "node",
		"baseUrl": "./",
		"esModuleInterop": true,
		"sourceMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": [
			"src/types",
			"node_modules/@types"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"spec"
	]
}
