{
	"extends": "./tsconfig.cjs.json",
	"compilerOptions": {
		"paths": {
			"async-injection": [
				"./src/index.ts"
			],
			"async-injection/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./spec/**/*"
	],
	"ts-node": {
		"transpileOnly": true,
		"experimentalResolver": true
	}
}
