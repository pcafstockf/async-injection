{
	"extends": "./tsconfig.cjs.json",
	"compilerOptions": {
		"paths": {
			"@async-injection": [
				"src/index.ts"
			],
			"@async-injection/*": [
				"src/*"
			]
		},
		"rootDir": "./"
	},
	"include": [
		"./src/**/*",
		"./tst/**/*"
	],
	"ts-node": {
		"transpileOnly": true,
		"experimentalResolver": true
	}
}
